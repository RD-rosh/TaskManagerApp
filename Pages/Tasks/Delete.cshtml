@page
@model TaskManagerApp.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h4>Are you sure you want to delete this task?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.TaskItem.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.TaskItem.Description</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.TaskItem.DueDate.ToString("d")</dd>
        <dt class="col-sm-2">Is Complete</dt>
        <dd class="col-sm-10">@Model.TaskItem.IsComplete</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TaskItem.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
